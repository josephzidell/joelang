  },
  "homepage": "https://github.com/josephzidell/joelang#readme",
  "dependencies": {
    "fs-extra": "^11.1.0",
    "jest": "^29.4.2",
    "json-diff": "^1.0.2",
    "lodash": "^4.17.21",
    "ts-node": "^10.9.1",
    "type-fest": "^3.5.7",
    "typescript": "^4.9.5"
  },
  "devDependencies": {
    "@babel/core": "^7.20.12",
